#Find alias origin
alias find_alias='zsh -ixc : 2>&1 | grep "$1"'
alias find_alias_bash='bash -ixlc : 2>&1 | grep "$1"'

alias lc='colorls -lA --gs --sd'
alias lch='colorls -l --gs --sd'
alias lt2='colorls --tree=2'
