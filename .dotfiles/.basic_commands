##########################################
# Find functions
##########################################

# Find modification
function findc() {
   find . -type f | xargs grep -nHi "${1}" 
}

# find name
function fn() {
		if [ -z "${1}" -o -z "${2}" ]; then
 			echo "Usage: fn 1_PATH_WHERE_SEARCH_STARTS 2_NAME";
 			return 1;
		fi;
    find '${1}' -name '${2}' 2>/dev/null
}

# find text
function ft() { 
   grep -ris "$1" $2 
}

##########################################
# Useful functions
##########################################

# Print IP from local interfaces
function ip() {
    echo -e "Ethernet:\t `ipconfig getifaddr en0 2> /dev/null`"
    echo -e "WiFi:\t\t `ipconfig getifaddr en1 2> /dev/null`"
    echo -e "External:\t `curl -s http://checkip.dyndns.org/ | grep -o '[0-9][0-9]*.[0-9][0-9]*.[0-9][0-9]*.[0-9]*'`"
    echo ""
}

# Change to active Finder directory
function cdf () { 
   local fPath=`osascript -e '
   tell app "finder"
      try
         set folderPath to (folder of the front window as alias)
      on error
         set folderPath to (path to desktop folder as alias)
      end try
      POSIX path of folderPath
   end tell'
   `;
   echo "cd $fPath";
   cd "$fPath" >/dev/null
}

##########################################
# SSH
##########################################

# Generate ssh-key
alias ssh_gen_key='ssh-keygen -t <also> -b 4096'
# List identities in ssh-agent
alias ssh_list_keys='ssh-add -l'

# Add key to identites of ssh-agent
function ssh_add_key() {
	ssh-add "$HOME/.ssh/${1}"
}


